{% extends 'base.html.twig' %}

{% block title %}CRM формы{% endblock %}

{% block body %}
    <div class="flex items-center justify-between mb-4">
        <h1 class="text-xl font-semibold">CRM формы</h1>
        <a class="px-3 py-2 bg-blue-600 text-white rounded" href="{{ path('crm_forms_new') }}">Создать форму</a>
    </div>

    <div class="space-y-3">
        {% for form in forms %}
            <div class="p-4 bg-white border rounded">
                <div class="flex items-start justify-between">
                    <div class="space-y-2">
                        <div class="text-lg font-medium">{{ form.name }}</div>
                        <div class="text-sm text-gray-600">Slug: <span class="font-mono">{{ form.slug }}</span></div>
                        <div class="text-sm text-gray-600">Воронка: {{ form.pipeline.name }}</div>
                        <div class="text-sm text-gray-600">Этап: {{ form.stage.name }}</div>
                        <div class="text-sm text-gray-600">Public key: <span class="font-mono">{{ form.publicKey }}</span></div>

                        <div class="mt-2 text-sm space-y-4">
                            <div class="font-medium text-gray-700">Код для вставки</div>
                            <p class="mt-1 text-xs text-gray-500">Скопируйте и добавьте перед &lt;/body&gt; на странице формы.</p>

                            <div class="space-y-2">
                                <div class="text-sm font-medium text-gray-700">Простой HTML-вариант (без CORS)</div>
                                <pre class="mt-1 p-3 bg-gray-50 border rounded text-xs overflow-auto"><code>{% apply escape %}<form
  action="https://{{ app.request.host }}/api/crm/web-forms/{{ form.publicKey }}/submit"
  method="post"
  class="vf-lead-form"
>
  <input type="hidden" name="page_url" value="">
  <input type="hidden" name="utm_source" value="">
  <input type="hidden" name="utm_medium" value="">
  <input type="hidden" name="utm_campaign" value="">

  <label>
    Ваше имя*
    <input type="text" name="name" required>
  </label>

  <label>
    Телефон*
    <input type="tel" name="phone" required>
  </label>

  <label>
    Комментарий
    <textarea name="comment"></textarea>
  </label>

  <button type="submit">Отправить</button>
</form>
<script>
  (function () {
    var f = document.querySelector('.vf-lead-form');
    if (!f) return;
    var params = new URLSearchParams(window.location.search);
    f.querySelector('input[name="page_url"]').value = window.location.href;
    ['utm_source','utm_medium','utm_campaign'].forEach(function (k) {
      var v = params.get(k);
      if (v) f.querySelector('input[name="'+k+'"]').value = v;
    });
  })();
</script>{% endapply %}</code></pre>
                            </div>

                            <div class="space-y-1">
                                <div class="text-sm font-medium text-gray-700">Скрипт-виджет</div>
                                <pre class="mt-1 p-3 bg-gray-50 border rounded text-xs overflow-auto"><code>{% apply escape %}<script async src="{{ widgetHost }}/crm/forms/widget.js"
        data-form-key="{{ form.publicKey }}"
        data-api-base="{{ widgetHost }}"></script>{% endapply %}</code></pre>
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col items-end space-y-2">
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs {{ form.isActive ? 'bg-green-100 text-green-800' : 'bg-gray-200 text-gray-600' }}">
                            {{ form.isActive ? 'Активна' : 'Отключена' }}
                        </span>
                        <div class="flex space-x-3">
                            <a class="text-blue-600" href="{{ path('crm_forms_edit', {id: form.id}) }}">Редактировать</a>
                            <form method="post" action="{{ path('crm_forms_toggle', {id: form.id}) }}" onsubmit="return confirm('Изменить статус формы?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle_crm_form_' ~ form.id) }}">
                                <button type="submit" class="text-{{ form.isActive ? 'amber' : 'green' }}-600">
                                    {{ form.isActive ? 'Отключить' : 'Включить' }}
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-sm text-gray-500">Формы ещё не созданы.</div>
        {% endfor %}
    </div>
{% endblock %}
