{% extends 'base.html.twig' %}

{% block title %}CRM формы{% endblock %}

{% block body %}
    <div class="flex items-center justify-between mb-4">
        <h1 class="text-xl font-semibold">CRM формы</h1>
        <a class="px-3 py-2 bg-blue-600 text-white rounded" href="{{ path('crm_forms_new') }}">Создать форму</a>
    </div>

    <div class="mb-6 overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 border border-gray-200 bg-white text-sm">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Имя</th>
                    <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Slug</th>
                    <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Воронка</th>
                    <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Этап</th>
                    <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Ключ</th>
                    <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">Статус</th>
                    <th class="px-3 py-2 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Всего сделок</th>
                    <th class="px-3 py-2 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Закрыто</th>
                    <th class="px-3 py-2 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Сумма закрытых</th>
                    <th class="px-3 py-2 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Действия</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {% for form in forms %}
                    {% set stats = formsStats[form.id|default('')] ?? null %}
                    <tr>
                        <td class="px-3 py-2 text-sm text-gray-900">{{ form.name }}</td>
                        <td class="px-3 py-2 text-sm text-gray-900 font-mono">{{ form.slug }}</td>
                        <td class="px-3 py-2 text-sm text-gray-900">{{ form.pipeline.name }}</td>
                        <td class="px-3 py-2 text-sm text-gray-900">{{ form.stage.name }}</td>
                        <td class="px-3 py-2 text-sm text-gray-900 font-mono">{{ form.publicKey }}</td>
                        <td class="px-3 py-2 text-sm text-gray-900">
                            <span class="inline-flex items-center px-2 py-1 rounded text-xs {{ form.isActive ? 'bg-green-100 text-green-800' : 'bg-gray-200 text-gray-600' }}">
                                {{ form.isActive ? 'Активна' : 'Отключена' }}
                            </span>
                        </td>
                        <td class="px-3 py-2 text-right text-sm text-gray-900">{{ stats ? stats.totalDeals : 0 }}</td>
                        <td class="px-3 py-2 text-right text-sm text-gray-900">{{ stats ? stats.closedDeals : 0 }}</td>
                        <td class="px-3 py-2 text-right text-sm text-gray-900">
                            {% if stats %}
                                {{ stats.closedAmount|number_format(0, '.', ' ') }}
                            {% else %}
                                0
                            {% endif %}
                        </td>
                        <td class="px-3 py-2 text-right text-sm text-gray-900">
                            <div class="flex items-center justify-end space-x-3">
                                <a class="text-blue-600" href="{{ path('crm_forms_edit', {id: form.id}) }}">Редактировать</a>
                                <form method="post" action="{{ path('crm_forms_toggle', {id: form.id}) }}" onsubmit="return confirm('Изменить статус формы?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle_crm_form_' ~ form.id) }}">
                                    <button type="submit" class="text-{{ form.isActive ? 'amber' : 'green' }}-600">
                                        {{ form.isActive ? 'Отключить' : 'Включить' }}
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="px-3 py-4 text-sm text-gray-500" colspan="10">Формы ещё не созданы.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% if utmStats is defined and utmStats is not empty %}
        <div class="mt-8">
            <h2 class="mb-3 text-lg font-semibold">UTM-аналитика по заявкам с форм</h2>

            <table class="min-w-full divide-y divide-gray-200 border border-gray-200 bg-white text-sm">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">UTM-кампания</th>
                        <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">UTM-source</th>
                        <th class="px-3 py-2 text-left text-xs font-semibold uppercase tracking-wide text-gray-500">UTM-medium</th>
                        <th class="px-3 py-2 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Всего сделок</th>
                        <th class="px-3 py-2 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Закрыто</th>
                        <th class="px-3 py-2 text-right text-xs font-semibold uppercase tracking-wide text-gray-500">Сумма закрытых</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    {% for campaignKey, stats in utmStats %}
                        <tr>
                            <td class="px-3 py-2 text-sm text-gray-900">{{ stats.campaign }}</td>
                            <td class="px-3 py-2 text-sm text-gray-900">{{ stats.source }}</td>
                            <td class="px-3 py-2 text-sm text-gray-900">{{ stats.medium }}</td>
                            <td class="px-3 py-2 text-right text-sm text-gray-900">{{ stats.totalDeals }}</td>
                            <td class="px-3 py-2 text-right text-sm text-gray-900">{{ stats.closedDeals }}</td>
                            <td class="px-3 py-2 text-right text-sm text-gray-900">
                                {{ stats.closedAmount|number_format(0, '.', ' ') }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
