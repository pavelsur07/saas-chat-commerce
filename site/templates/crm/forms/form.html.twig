{% extends 'base.html.twig' %}

{% block title %}{{ isEdit ? 'Редактировать' : 'Создать' }} CRM форму{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto bg-white border rounded p-6">
        <h1 class="text-xl font-semibold mb-4">{{ isEdit ? 'Редактирование CRM формы' : 'Создание CRM формы' }}</h1>

        {{ form_start(form) }}
            <div class="space-y-4">
                {{ form_row(form.name) }}
                {{ form_row(form.slug) }}
                {{ form_row(form.pipeline) }}
                {{ form_row(form.stage) }}
                {{ form_row(form.owner) }}
                {{ form_row(form.successType) }}
                {{ form_row(form.successMessage) }}
                {{ form_row(form.successRedirectUrl) }}
                <div
                    class="space-y-2"
                    data-controller="webform-fields"
                    data-webform-fields-target="container"
                >
                    <div>
                        {{ form_label(form.fields) }}
                        <p class="mt-1 text-xs text-gray-500">
                            Настройте поля формы через конструктор ниже. Сырой JSON редактировать не нужно.
                        </p>
                    </div>

                    <div class="hidden">
                        {{ form_widget(form.fields) }}
                        {{ form_errors(form.fields) }}
                    </div>

                    <div class="rounded-xl border border-gray-200 bg-white p-3">
                        <div class="mb-2 flex items-center justify-between">
                            <div class="text-sm font-semibold text-gray-800">Поля формы</div>
                            <button
                                type="button"
                                class="rounded-full bg-gray-900 px-3 py-1 text-xs font-semibold text-white hover:bg-gray-800"
                                data-action="webform-fields#addField"
                            >
                                + Добавить поле
                            </button>
                        </div>

                        <div
                            class="space-y-2"
                            data-webform-fields-target="list"
                        >
                        </div>

                        <p class="mt-2 text-[11px] text-gray-500">
                            Порядок полей в списке соответствует порядку отображения на сайте. Типы полей и обязательность можно менять.
                        </p>
                    </div>
                </div>
                {{ form_row(form.tags) }}
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Public key</label>
                    <input type="text" value="{{ crmForm.publicKey }}" readonly class="w-full border rounded px-3 py-2 bg-gray-100 text-sm font-mono">
                </div>
                {{ form_row(form.isActive) }}
            </div>

            <div class="mt-6 flex justify-between">
                <a href="{{ path('crm_forms_index') }}" class="px-3 py-2 border rounded">Назад</a>
                <button class="px-4 py-2 bg-blue-600 text-white rounded" type="submit">{{ isEdit ? 'Сохранить' : 'Создать' }}</button>
            </div>
        {{ form_end(form) }}
    </div>

    {% if isEdit %}
        <div class="max-w-3xl mx-auto mt-6 space-y-4">
            <div class="bg-white border rounded p-6 space-y-3">
                <div class="flex items-start justify-between gap-3 flex-wrap">
                    <div>
                        <div class="text-lg font-semibold">Код для вставки</div>
                        <p class="text-sm text-gray-600">Скопируйте сниппет и добавьте перед &lt;/body&gt; на сторонней странице.</p>
                    </div>
                    <div class="text-xs text-gray-600">Public key: <span class="font-mono">{{ crmForm.publicKey }}</span></div>
                </div>

                {% set parsedFields = crmForm.fields is defined and crmForm.fields ? crmForm.fields : [] %}

                {% if parsedFields is iterable and parsedFields|length > 0 %}
                    <div class="space-y-2">
                        <div class="text-sm font-medium text-gray-800">HTML-код по полям формы</div>
                        <p class="text-xs text-gray-500">Сгенерированный код учитывает текущую конфигурацию полей и готов к вставке на сайт.</p>

                        <pre class="mt-1 max-h-96 overflow-auto rounded border bg-gray-50 p-3 text-xs"><code>{% apply escape %}<form
  action="https://{{ app.request.host }}/api/crm/web-forms/{{ crmForm.publicKey }}/submit"
  method="post"
  class="vf-lead-form"
>
  <input type="hidden" name="page_url" value="">
  <input type="hidden" name="utm_source" value="">
  <input type="hidden" name="utm_medium" value="">
  <input type="hidden" name="utm_campaign" value="">

  <!-- Honeypot: скрытое поле для ботов -->
  <div style="position:absolute;left:-10000px;top:auto;width:1px;height:1px;overflow:hidden;" aria-hidden="true">
    <label>
      Не заполняйте это поле
      <input type="text" name="_hpt" tabindex="-1" autocomplete="off">
    </label>
  </div>

{% for field in parsedFields %}
  {% set fKey = field.key ?? ('field_' ~ loop.index) %}
  {% set fLabel = field.label ?? ('Поле ' ~ loop.index) %}
  {% set fType = field.type ?? 'text' %}
  {% set fRequired = field.required ?? false %}
  {% set fPlaceholder = field.placeholder ?? '' %}

  <div style="margin-bottom: 8px;">
    <label style="display:block;font-size:14px;margin-bottom:4px;">
      {{ fLabel }}{% if fRequired %}*{% endif %}
      {% if fType in ['text', 'email', 'tel'] %}
        <input
          type="{{ fType }}"
          name="{{ fKey }}"
          {% if fPlaceholder %}placeholder="{{ fPlaceholder }}"{% endif %}
          {% if fRequired %}required{% endif %}
          style="display:block;width:100%;padding:6px 8px;border:1px solid #D1D5DB;border-radius:4px;font-size:14px;"
        >
      {% elseif fType == 'textarea' %}
        <textarea
          name="{{ fKey }}"
          {% if fPlaceholder %}placeholder="{{ fPlaceholder }}"{% endif %}
          {% if fRequired %}required{% endif %}
          style="display:block;width:100%;min-height:80px;padding:6px 8px;border:1px solid #D1D5DB;border-radius:4px;font-size:14px;"
        ></textarea>
      {% elseif fType == 'checkbox' %}
        <input
          type="checkbox"
          name="{{ fKey }}"
          {% if fRequired %}required{% endif %}
          style="margin-right:6px;"
        >
      {% else %}
        <input
          type="text"
          name="{{ fKey }}"
          {% if fPlaceholder %}placeholder="{{ fPlaceholder }}"{% endif %}
          {% if fRequired %}required{% endif %}
          style="display:block;width:100%;padding:6px 8px;border:1px solid #D1D5DB;border-radius:4px;font-size:14px;"
        >
      {% endif %}
    </label>
  </div>
{% endfor %}

  <button
    type="submit"
    style="display:inline-flex;align-items:center;justify-content:center;padding:8px 16px;border-radius:999px;border:none;background:#111827;color:white;font-size:14px;font-weight:600;cursor:pointer;"
  >
    Отправить
  </button>
</form>
<script>
  (function () {
    var f = document.querySelector('.vf-lead-form');
    if (!f) return;

    var params = new URLSearchParams(window.location.search);
    var pageUrlInput = f.querySelector('input[name="page_url"]');
    if (pageUrlInput) {
      pageUrlInput.value = window.location.href;
    }
    ['utm_source','utm_medium','utm_campaign'].forEach(function (k) {
      var input = f.querySelector('input[name="'+k+'"]');
      if (!input) return;
      var v = params.get(k);
      if (v) input.value = v;
    });

    if (typeof window.fetch !== 'function') {
      return;
    }

    function ensureMessageContainers() {
      var successBox = f.querySelector('.vf-lead-form-success');
      var errorBox = f.querySelector('.vf-lead-form-error');

      if (!successBox) {
        successBox = document.createElement('div');
        successBox.className = 'vf-lead-form-success';
        successBox.style.marginTop = '8px';
        successBox.style.fontSize = '14px';
        successBox.style.color = '#059669';
        f.appendChild(successBox);
      }

      if (!errorBox) {
        errorBox = document.createElement('div');
        errorBox.className = 'vf-lead-form-error';
        errorBox.style.marginTop = '4px';
        errorBox.style.fontSize = '13px';
        errorBox.style.color = '#dc2626';
        f.appendChild(errorBox);
      }

      return { successBox: successBox, errorBox: errorBox };
    }

    f.addEventListener('submit', function (e) {
      e.preventDefault();

      var containers = ensureMessageContainers();
      var successBox = containers.successBox;
      var errorBox = containers.errorBox;

      successBox.textContent = '';
      errorBox.textContent = '';

      var submitBtn = f.querySelector('button[type="submit"]');
      var originalText = submitBtn ? submitBtn.textContent : null;
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Отправка...';
      }

      var formData = new FormData(f);

      fetch(f.action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      })
        .then(function (response) {
          return response.json().catch(function () {
            throw new Error('Invalid JSON response');
          });
        })
        .then(function (data) {
          if (data && data.success) {
            if (data.redirectUrl) {
              window.location.href = data.redirectUrl;
              return;
            }
            var message = data.message || 'Спасибо! Заявка отправлена.';
            successBox.textContent = message;
            errorBox.textContent = '';
            f.reset();
          } else {
            var errMsg = (data && data.error) ? data.error : 'Не удалось отправить форму. Попробуйте ещё раз.';
            errorBox.textContent = errMsg;
          }
        })
        .catch(function () {
          errorBox.textContent = 'Произошла ошибка при отправке. Попробуйте ещё раз.';
        })
        .finally(function () {
          if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.textContent = originalText || 'Отправить';
          }
        });
    });
  })();
</script>{% endapply %}</code></pre>
                    </div>
                {% endif %}

                <div class="space-y-1">
                    <div class="text-sm font-medium text-gray-800">Скрипт-виджет</div>
                    <pre class="mt-1 p-3 bg-gray-50 border rounded text-xs overflow-auto"><code>{% apply escape %}<script async src="{{ widgetHost }}/crm/forms/widget.js"
        data-form-key="{{ crmForm.publicKey }}"
        data-api-base="{{ widgetHost }}"></script>{% endapply %}</code></pre>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
