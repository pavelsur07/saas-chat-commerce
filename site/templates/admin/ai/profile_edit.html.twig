{# templates/admin/ai/profile_edit.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}AI-профиль компании{% endblock %}
{% block body %}
    <h1 class="text-xl font-semibold mb-4">AI-профиль компании</h1>
    {{ form_start(form, { attr: { class: 'space-y-4 max-w-2xl' } }) }}
    {{ form_row(form.toneOfVoice) }}
