{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Выбор компании</h1>
    <ul class="space-y-3">
        {% for uc in companies %}
            <li class="border p-4 rounded bg-white shadow-sm">
                <div class="flex justify-between items-center">
                    <div>
                        <div class="text-lg font-semibold">{{ uc.company.name }}</div>
                        <div class="text-sm text-gray-500">Ваша роль: {{ uc.role }}</div>
                    </div>
                    <a href="{{ path('company.switch', {id: uc.company.id}) }}"
                       class="px-4 py-2 bg-blue-600 text-white text-sm rounded hover:bg-blue-700">
                        Выбрать
                    </a>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
