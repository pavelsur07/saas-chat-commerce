{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-xl space-y-6">
  <div>
    <h1 class="text-2xl font-semibold text-gray-900">Редактировать оператора</h1>
    <p class="text-sm text-gray-500">{{ link.user.email }}</p>
  </div>

  <form method="post" class="bg-white shadow rounded-lg p-6 space-y-4">
    <input type="hidden" name="_token" value="{{ csrf_token('edit_operator_' ~ link.id) }}">
    <div>
      <label for="role" class="block text-sm font-medium text-gray-700">Роль</label>
      <select id="role" name="role" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" {% if link.role == constant('App\\Entity\\Company\\UserCompany::ROLE_OWNER') %}disabled{% endif %}>
        <option value="{{ constant('App\\Entity\\Company\\UserCompany::ROLE_OPERATOR') }}" {{ link.role == constant('App\\Entity\\Company\\UserCompany::ROLE_OPERATOR') ? 'selected' : '' }}>Оператор</option>
        {% if link.role == constant('App\\Entity\\Company\\UserCompany::ROLE_OWNER') %}
          <option selected>OWNER</option>
        {% endif %}
      </select>
      {% if link.role == constant('App\\Entity\\Company\\UserCompany::ROLE_OWNER') %}
        <p class="mt-1 text-xs text-gray-500">Роль владельца изменить нельзя.</p>
      {% endif %}
    </div>

    <div>
      <label for="status" class="block text-sm font-medium text-gray-700">Статус</label>
      <select id="status" name="status" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
        <option value="{{ constant('App\\Entity\\Company\\UserCompany::STATUS_ACTIVE') }}" {{ link.status == constant('App\\Entity\\Company\\UserCompany::STATUS_ACTIVE') ? 'selected' : '' }}>Активен</option>
        <option value="{{ constant('App\\Entity\\Company\\UserCompany::STATUS_INVITED') }}" {{ link.status == constant('App\\Entity\\Company\\UserCompany::STATUS_INVITED') ? 'selected' : '' }}>Приглашён</option>
        <option value="{{ constant('App\\Entity\\Company\\UserCompany::STATUS_DISABLED') }}" {{ link.status == constant('App\\Entity\\Company\\UserCompany::STATUS_DISABLED') ? 'selected' : '' }}>Отключён</option>
      </select>
    </div>

    <div class="flex items-center gap-3">
      <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg shadow hover:bg-blue-700">Сохранить</button>
      <a href="{{ path('company_operators_index') }}" class="text-sm text-gray-600 hover:text-gray-800">Отмена</a>
    </div>
  </form>
</div>
{% endblock %}
