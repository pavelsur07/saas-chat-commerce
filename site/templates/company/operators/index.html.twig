{% extends 'base.html.twig' %}

{% block body %}
<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">Операторы</h1>
      <p class="text-sm text-gray-500">Управляйте доступом сотрудников к компании.</p>
    </div>
    <a href="{{ path('company_operators_new') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg shadow hover:bg-blue-700">Добавить</a>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Роль</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Создан</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      {% for link in operators %}
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ link.user.email }}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
            {% if link.role == constant('App\\Entity\\Company\\UserCompany::ROLE_OWNER') %}
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">Владелец</span>
            {% else %}
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Оператор</span>
            {% endif %}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            {% set statusClasses = {
              constant('App\\Entity\\Company\\UserCompany::STATUS_ACTIVE'): 'bg-green-100 text-green-800',
              constant('App\\Entity\\Company\\UserCompany::STATUS_INVITED'): 'bg-yellow-100 text-yellow-800',
              constant('App\\Entity\\Company\\UserCompany::STATUS_DISABLED'): 'bg-red-100 text-red-800'
            } %}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ statusClasses[link.status]|default('bg-gray-100 text-gray-700') }}">
              {{ link.status }}
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ link.createdAt|date('Y-m-d H:i') }}</td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
            <a href="{{ path('company_operators_edit', {'id': link.id}) }}" class="text-blue-600 hover:text-blue-900">Изменить</a>
            {% if link.role != constant('App\\Entity\\Company\\UserCompany::ROLE_OWNER') %}
              <form method="post" action="{{ path('company_operators_disable', {'id': link.id}) }}" class="inline"
                    onsubmit="return confirm('Отключить оператора?');">
                <input type="hidden" name="_token" value="{{ csrf_token('disable_operator_' ~ link.id) }}">
                <button type="submit" class="text-red-600 hover:text-red-900">Отключить</button>
              </form>
            {% endif %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">Пока нет операторов.</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
